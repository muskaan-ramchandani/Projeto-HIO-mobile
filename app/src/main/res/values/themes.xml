<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelperInOlympics" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/roxoPrincipal</item>
        <item name="colorPrimaryVariant">@color/roxoPrincipal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/roxoMaisEscuro</item>
        <item name="colorSecondaryVariant">@color/roxoMaisEscuro</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Estilo barras de menu-->
    <style name="NavigationViewTextStyle">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.HelperInOlympics.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/roxoPrincipal</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.HelperInOlympics.AppBarOverlay"  />

    <style name="Theme.HelperInOlympics.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Checkbox personalizada-->
    <style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:buttonTint">@android:color/white</item>
    </style>

</resources>