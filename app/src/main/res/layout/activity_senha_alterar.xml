<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/txtInformeNovaSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:text="Informe sua nova senha"
            android:textColor="@color/roxoPrincipal"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/editTextSenhaNova"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:hint="Digite sua senha"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:inputType="number"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/editTextConfirmeSenhaNova"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:hint="Digite sua senha"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:inputType="number"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="130dp"
            android:gravity="center" />

        <Button
            android:id="@+id/btnAlterarSenha"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:text="Verificar"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@drawable/fundo_botoes_roxos"
            android:fontFamily="@font/open_sans_bold"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="210dp" />


    </androidx.cardview.widget.CardView>
</LinearLayout>