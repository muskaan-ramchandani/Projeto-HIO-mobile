<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="300dp"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtInformeNovaSenha"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="Informe sua nova senha"
                android:textColor="@color/roxoPrincipal"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/editTextSenhaNova"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:hint="Digite sua senha"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black"
                android:inputType="text"
                android:layout_marginTop="30dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/editTextConfirmeSenhaNova"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:hint="Digite sua senha"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black"
                android:inputType="text"
                android:layout_marginTop="20dp"
                android:gravity="center" />

            <Button
                android:id="@+id/btnAlterarSenha"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:text="Verificar"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:background="@drawable/fundo_botoes_roxos"
                android:fontFamily="@font/open_sans_bold"
                android:layout_marginTop="30dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>