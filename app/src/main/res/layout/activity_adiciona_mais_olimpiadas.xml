<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:layout_height="550dp"
    android:layout_width="350dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal">

    <ImageButton
        android:id="@+id/btnFecharAdicionarMaisOlimpiadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/baseline_close_24_black" />

    <TextView
        android:id="@+id/txtEscolhaSuasOlimpiadas"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Escolha olimpÃ­adas para adicionar"
        android:textSize="20sp"
        android:layout_marginTop="5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEscolhaMaisOlimpiadas"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="10dp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardBtnFinalizar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp">

        <View
            android:id="@+id/linhaCinzaCard"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/linha_cinza"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFinalizarEscolha"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Finalizar"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/fundo_titulo_flashcard"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>


