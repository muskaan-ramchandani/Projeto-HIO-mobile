<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="590dp"
    android:background="#f8f6f6"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtSuasPerguntasRespondidas"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Perguntas respondidas:"
        android:paddingStart="15dp"/>

    <LinearLayout
        android:id="@+id/linearPerguntasRespondidas"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSuasPerguntasRespondidas"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtSuasPerguntasSemResposta"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Perguntas sem resposta:"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"/>


    <LinearLayout
        android:id="@+id/linearPerguntasNAORespondidas"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSuasPerguntasSemResposta"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
    </LinearLayout>

</LinearLayout>