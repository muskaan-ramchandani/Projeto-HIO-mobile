        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp" >

        <LinearLayout
            android:id="@+id/linearTextoAlternativa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
