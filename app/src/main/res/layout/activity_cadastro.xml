<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btnVoltarAEscolhaAlunoProf"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="6dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/btnvoltar"
        android:layout_gravity="start"/>

    <TextView
        android:id="@+id/txtCadastreSe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#49688D"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center_horizontal"
        android:text="Cadastre-se"
        android:textSize="38sp"
        android:textColor="#49688D"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/linearDados"
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewNome"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/iconenome" />

            <EditText
                android:id="@+id/editTextNomeCompleto"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:hint="Nome completo"
                android:textColorHint="#858585"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:background="@drawable/edittext_personalizado_1"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <ImageView
                android:id="@+id/imageViewUser"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/iconeuser" />

            <EditText
                android:id="@+id/editTextNomeUsuario"
                android:hint="Nome de usuÃ¡rio"
                android:textColorHint="#858585"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="@drawable/edittext_personalizado_1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <ImageView
                android:id="@+id/imageViewEmail"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/iconeemail" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:textColorHint="#858585"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="@drawable/edittext_personalizado_1" /></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <ImageView
                android:id="@+id/imageViewSenha"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/iconesenha" />

            <EditText
                android:id="@+id/editTextSenha"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Senha"
                android:textColorHint="#858585"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="@drawable/edittext_personalizado_1" /></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <ImageView
                android:id="@+id/imageViewConfirma"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/iconeconfirmasenha" />

            <EditText
                android:id="@+id/editTextConfirmarSenha"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Confirmar senha"
                android:textColorHint="#858585"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edittext_personalizado_1"
                android:paddingStart="15dp"
                android:paddingEnd="15dp" /></LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFinalizarCadastro"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fundo_botoes_roxos"
        android:fontFamily="@font/open_sans_bold"
        android:text="Finalizar cadastro"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imgHipoCadastreSe"
        android:layout_width="106dp"
        android:layout_height="185dp"
        android:scaleType="fitXY"
        android:layout_gravity="start"
        app:srcCompat="@drawable/hipocommedalhas" />


</LinearLayout>