<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".cadastros.CadastroActivity">

    <ImageButton
        android:id="@+id/btnVoltarAEscolhaAlunoProf"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="6dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/btnvoltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtCadastreSe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#49688D"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center_horizontal"
        android:text="Cadastre-se"
        android:textSize="38sp"
        android:textColor="#49688D"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />

    <LinearLayout
        android:id="@+id/linearDados"
        android:layout_width="300dp"
        android:layout_height="340dp"
        android:orientation="vertical"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCadastreSe">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewNome"
                android:layout_width="65dp"
                android:layout_height="57dp"
                app:srcCompat="@drawable/iconenome" />

            <EditText
                android:id="@+id/editTextNomeCompleto"
                android:layout_width="223dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:hint="Nome completo"
                android:textColorHint="#858585"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:background="@drawable/edittext_personalizado_1"
                android:paddingStart="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <ImageView
                android:id="@+id/imageViewUser"
                android:layout_width="65dp"
                android:layout_height="57dp"
                app:srcCompat="@drawable/iconeuser" />

            <EditText
                android:id="@+id/editTextNomeUsuario"
                android:hint="Nome de usuÃ¡rio"
                android:textColorHint="#858585"
                android:layout_width="223dp"
                android:layout_height="50dp"
                android:ems="10"
                android:layout_marginStart="10dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:background="@drawable/edittext_personalizado_1"
                android:paddingStart="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <ImageView
                android:id="@+id/imageViewEmail"
                android:layout_width="65dp"
                android:layout_height="57dp"
                app:srcCompat="@drawable/iconeemail" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="223dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:textColorHint="#858585"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:background="@drawable/edittext_personalizado_1"
                android:paddingStart="15dp" /></LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <ImageView
                android:id="@+id/imageViewSenha"
                android:layout_width="65dp"
                android:layout_height="57dp"
                app:srcCompat="@drawable/iconesenha" />

            <EditText
                android:id="@+id/editTextSenha"
                android:layout_width="223dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Senha"
                android:textColorHint="#858585"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:background="@drawable/edittext_personalizado_1"
                android:paddingStart="15dp" /></LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <ImageView
                android:id="@+id/imageViewConfirma"
                android:layout_width="65dp"
                android:layout_height="57dp"
                app:srcCompat="@drawable/iconeconfirmasenha" />

            <EditText
                android:id="@+id/editTextConfirmarSenha"
                android:layout_width="223dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Confirmar senha"
                android:textColorHint="#858585"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:background="@drawable/edittext_personalizado_1"
                android:paddingStart="15dp" /></LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/imgHipoCadastreSe"
        android:layout_width="186dp"
        android:layout_height="175dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="555dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/hipocommedalhas" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="191dp"
        android:layout_height="194dp"
        android:layout_marginStart="296dp"
        android:layout_marginBottom="624dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/mancharoxa" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFinalizarCadastro"
        android:layout_width="151dp"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/fundo_botoes_roxos"
        android:fontFamily="@font/open_sans_bold"
        android:text="Finalizar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearDados" />

</androidx.constraintlayout.widget.ConstraintLayout>