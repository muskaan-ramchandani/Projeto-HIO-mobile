<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TelaEscolha"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TextView -->

    <!-- CardView 1 -->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="408dp"
        android:layout_height="88dp"
        android:fontFamily="@font/archivo_black"
        android:gravity="center"
        android:rotationX="4"
        android:text="Escolha as olimpíadas de sua preferência!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="408dp"
        android:layout_height="542dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/textView3"
                tools:layout_editor_absoluteX="16dp">

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9773DF"
                    android:fontFamily="@font/archivo_black"
                    android:gravity="center_vertical"
                    android:text="OBF - Olimpíada Brasileira de Física"
                    android:textColor="#FFFDFD"
                    android:textSize="16sp" /> <!-- Centraliza verticalmente -->

            </androidx.cardview.widget.CardView>

            <!-- CardView 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="375dp"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardView1" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#CB6CE6"
                    android:fontFamily="@font/archivo_black"
                    android:gravity="center_vertical"
                    android:text="OBMEP - Olimpíada Brasileira de Matemática das Escolas Públicas"
                    android:textColor="#FAF6F6"
                    android:textColorLink="#FFFFFF"
                    android:textSize="16sp" />

                <!-- Centraliza verticalmente -->




            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="375dp"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2"
                app:layout_constraintVertical_bias="0.0">

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FF914D"
                    android:fontFamily="@font/archivo_black"
                    android:gravity="center_vertical"
                    android:text="OBI - Olimpíada Brasileira de Informática"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="375dp"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView3"
                app:layout_constraintVertical_bias="0.0">

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#18B9CD"
                    android:fontFamily="@font/archivo_black"
                    android:gravity="center_vertical"
                    android:text="OBMEP - Olimpíada Brasileira de Matemática das Escolas Públicas"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="375dp"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView4"
                app:layout_constraintVertical_bias="0.0">

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#CB6CE6"
                    android:fontFamily="@font/archivo_black"
                    android:gravity="center_vertical"
                    android:text="ONHB - Olimpíada Nacional de História Brasileira"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView6"
                android:layout_width="375dp"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView5"
                app:layout_constraintVertical_bias="0.0">

                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#5271FF"
                    android:fontFamily="@font/archivo_black"
                    android:gravity="center_vertical"
                    android:text="OBQ - Olimpíada Brasileira de Química"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView7"
                android:layout_width="375dp"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView6"
                app:layout_constraintVertical_bias="0.0">

                <CheckBox
                    android:id="@+id/checkBox7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FF914D"
                    android:fontFamily="@font/archivo_black"
                    android:gravity="center_vertical"
                    android:text="OBB - Olimpíada Brasileira de Biologia"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView8"
                android:layout_width="375dp"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView7"
                app:layout_constraintVertical_bias="0.0">

                <CheckBox
                    android:id="@+id/checkBox8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#18B9CD"
                    android:fontFamily="@font/archivo_black"
                    android:gravity="center_vertical"
                    android:text="ONC - Olimpíada Nacional de Ciências"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#18B9CD" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:fontFamily="@font/archivo_black"
        android:gravity="clip_horizontal|center|center_vertical"
        android:text="Finalizar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.976" />


</androidx.constraintlayout.widget.ConstraintLayout>


