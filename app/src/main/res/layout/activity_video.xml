<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/roxoPrincipal"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




    <ImageView
        android:id="@+id/imgMacaCaindo2"
        android:layout_width="59dp"
        android:layout_height="64dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="674dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtNomeOlimp"
        app:srcCompat="@drawable/imgmacacaindo" />


    <TextView
        android:id="@+id/txtNomeOlimp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="680dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="OBF"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginStart="180dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        >


        <ImageButton
            android:id="@+id/btnTexto"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/iconetexto"
            android:scaleType="centerCrop"
            android:background="#00000000"
            android:layout_marginEnd="5dp"/>


        <ImageButton
            android:id="@+id/btnVideo"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:src="@drawable/iconevideo"
            android:scaleType="centerCrop"
            android:background="@drawable/fundo_arredondado_roxo_btn_selecionado"
            android:layout_marginEnd="5dp"/>


        <ImageButton
            android:id="@+id/btnFlashcard"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:src="@drawable/iconeflashcard"
            android:scaleType="centerCrop"
            android:background="#00000000"
            android:layout_marginEnd="5dp"/>


        <ImageButton
            android:id="@+id/btnQuestionario"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/iconequestionarios"
            android:scaleType="centerCrop"
            android:layout_marginEnd="5dp"
            android:background="#00000000"/>
    </LinearLayout>


    <TextView
        android:id="@+id/txtTema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        tools:text="Fundamentos da cinemática do ponto material"
        android:gravity="center"/>


    <ImageButton
        android:id="@+id/imgButtonVoltar2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/btnvoltar"
        app:layout_constraintTop_toBottomOf="@+id/scrollQuestionario"
        android:background="#00000000"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        android:layout_marginStart="3dp"


        />


    <ScrollView
        android:id="@+id/scrollQuestionario"
        android:layout_width="380dp"
        android:layout_height="500dp"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/txtTema"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="220dp"
                android:background="@drawable/fundo_arredondado_livros_provas"
                android:layout_marginBottom="10dp">


                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:background="@drawable/fundo_arredondado_livros_provas">


                    <TextView
                        android:id="@+id/txtConteudo1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Ponto material e corpo extenso"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp"/>


                    <ImageView
                        android:id="@+id/imgVideo1"
                        android:layout_width="240dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/fotovideo1" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp">


                        <ImageView
                            android:id="@+id/imgRedondo1"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:gravity="center"
                            app:srcCompat="@drawable/forma_redonda" />


                        <TextView
                            android:id="@+id/txtUserProf1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans"
                            android:text="profAnaCastela"
                            android:textColor="#000000"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="220dp"
                android:background="@drawable/fundo_arredondado_livros_provas"
                android:layout_marginBottom="10dp">


                <LinearLayout
                    android:layout_width="380dp"
