                        <TextView
                            android:id="@+id/txtUserProf4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans"
                            android:text="demiLovProf"
                            android:textColor="#000000"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="220dp"
                android:background="@drawable/fundo_arredondado_livros_provas"
                android:layout_marginBottom="10dp">


                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:background="@drawable/fundo_arredondado_livros_provas">


                    <TextView
                        android:id="@+id/txtConteudo5"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Distância percorrida e deslocamento"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp"/>


                    <ImageView
                        android:id="@+id/imgVideo5"
                        android:layout_width="240dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/fotovideo2" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp">


                        <ImageView
                            android:id="@+id/imgRedondo5"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:gravity="center"
                            app:srcCompat="@drawable/forma_redonda" />


                        <TextView
                            android:id="@+id/txtUserProf5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
