<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTopoRanking"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/roxoPrincipal"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <!--Linear nome app e pódio-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtHIO"
                android:layout_width="196dp"
                android:layout_height="37dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/nome_formatacao_Logo"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <!--Linear posições pódio-->
            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <!--Linear posição 2-->
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="198dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/fotoPerfilPosicao2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        tools:src="@drawable/iconeperfilvazioredonda" />

                    <TextView
                        android:id="@+id/txtUserPosicao2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/questrial"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="User321" />

                    <TextView
                        android:id="@+id/txtQntdPontosPosicao2"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/questrial"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginTop="3dp"
                        tools:text="12340 pontos"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardFundoLaranjaPodio2"
                        android:layout_width="75dp"
                        android:layout_height="58dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/btnOlimpiadaLaranja">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="58dp"
                            android:background="@color/btnOlimpiadaLaranja"
                            android:orientation="horizontal"
                            android:gravity="center_vertical|center_horizontal">

                            <TextView
                                android:id="@+id/txtPosicaoPodio2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="2"
                                android:textColor="@color/white"
                                android:textSize="34sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!--Linear posição 1-->
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="216dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/fotoPerfilPosicao1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        tools:src="@drawable/iconeperfilvazioredonda" />

                    <TextView
                        android:id="@+id/txtUserPosicao1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/questrial"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="User123" />

                    <TextView
                        android:id="@+id/txtQntdPontosPosicao1"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/questrial"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginTop="3dp"
                        tools:text="12400 pontos"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardFundoLaranjaPodio1"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/btnOlimpiadaLaranja">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="70dp"
                            android:background="@color/btnOlimpiadaLaranja"
                            android:orientation="horizontal"
                            android:gravity="center_vertical|center_horizontal">

                            <TextView
                                android:id="@+id/txtPosicaoPodio1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="34sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!--Linear posição 3-->
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="186dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/fotoPerfilPosicao3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        tools:src="@drawable/iconeperfilvazioredonda" />

                    <TextView
                        android:id="@+id/txtUserPosicao3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/questrial"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="User213" />

                    <TextView
                        android:id="@+id/txtQntdPontosPosicao3"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/questrial"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginTop="3dp"
                        tools:text="12335 pontos"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardFundoLaranjaPodio3"
                        android:layout_width="75dp"
                        android:layout_height="39dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/btnOlimpiadaLaranja">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="39dp"
                            android:background="@color/btnOlimpiadaLaranja"
                            android:orientation="horizontal"
                            android:gravity="center_vertical|center_horizontal">

                            <TextView
                                android:id="@+id/txtPosicaoPodio3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="3"
                                android:textColor="@color/white"
                                android:textSize="34sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRanking"
        android:layout_width="match_parent"
        android:layout_height="382dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarTopoRanking"
        app:layout_constraintBottom_toTopOf="@+id/toolbarBotoesInferiores"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarBotoesInferiores"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/roxoPrincipal"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <LinearLayout
            android:id="@+id/linearBotoesInferiores"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/roxoPrincipal"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/toolbarBotoesInferiores"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="0dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical"
                android:background="@drawable/fundo_arredondado_roxo_btn_selecionado"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnAcessarHanking"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:background="#00000000"
                    android:src="@drawable/iconeranking"
                    android:contentDescription="Botão para visualizar o hanking do aluno"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/txtHanking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/questrial"
                    android:text="Ranking"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical"
                android:background="@color/roxoPrincipal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnRetornarInicio"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#00000000"
                    android:src="@drawable/simbolo_inicio"
                    android:contentDescription="Botão para retornar à tela inicial do aluno caso não esteja nela"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/txtTelaInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/questrial"
                    android:text="Início"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="78dp"
                android:orientation="vertical"
                android:background="@color/roxoPrincipal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnCalendario"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#00000000"
                    android:src="@drawable/iconecalendario"
                    android:contentDescription="Botão para visualizar o calendário do aluno"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/txtTelaCalendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/questrial"
                    android:text="Calendário"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>