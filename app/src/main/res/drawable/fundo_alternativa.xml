<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Pressionado -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Camada inferior -->
            <item android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/fundoSelecionado" />
                    <corners android:radius="16dp" />
                </shape>
            </item>

            <!-- Camada superior -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/btnSelecionadoForum" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!--NÃ£o pressionado-->
    <item>
        <layer-list>
            <!-- Camada inferior-->
            <item android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/cinza" />
                    <corners android:radius="16dp" />
                </shape>
            </item>

            <!-- Camada superior-->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/cinzaClaro" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
